{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "pipenv",
            "args": [
                "run",
                "make",
                "-j$(nproc)",
                "all"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Violet"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "windows": {
                "options": {
                    "shell": {
                        "executable": "bash.exe",
                        "args": [
                            "--login",
                            "-c"
                        ]
                    }
                }
            },
            "problemMatcher": []
        }
    ]
}